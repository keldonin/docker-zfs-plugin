{
  "description": "ZFS volume plugin for Docker",
  "documentation": "https://docs.docker.com/engine/extend/plugins/",
  "entrypoint": [
    "/docker-zfs-plugin"
  ],
  "env": [
    {
      "name": "LOGLEVEL",
      "description": "Set the logging level (debug, info, warn, error, fatal, panic)",
      "settable": [
        "value"
      ],
      "value": "info"
    },
    {
      "name": "ZFS_PARENT_DATASET",
      "description": "Set the parent dataset for ZFS volumes",
      "settable": [
        "value"
      ]
    },
    {
      "name": "ZFS_SHOW_FULL_DATASET",
      "description": "Show the full dataset name (including parent dataset)",
      "settable": [
        "value"
      ],
      "value": "on"
    },
    {
      "name": "ZFS_KEEP_NEW_DATASET",
      "description": "Default docker.zfs:keep value for newly created datasets (on/off)",
      "settable": [
        "value"
      ],
      "value": "off"
    },
    {
      "name": "ZFS_KEEP_EXISTING_DATASET",
      "description": "Default docker.zfs:keep value for existing datasets being attached (on/off)",
      "settable": [
        "value"
      ],
      "value": "on"
    }
  ],
  "interface": {
    "socket": "zfs-v2.sock",
    "types": [
      "docker.volumedriver/1.0"
    ]
  },
  "linux": {
    "capabilities": [
      "CAP_SYS_ADMIN"
    ],
    "devices": [
      {
        "path": "/dev/zfs"
      }
    ]
  },
  "mounts": [
    {
      "destination": "/mnt/",
      "options": [
        "rbind"
      ],
      "name": "state",
      "source": "/var/lib/docker/plugins/",
      "settable": [
        "source"
      ],
      "type": "bind"
    },
    {
      "destination": "/var/lib/docker/volumes/",
      "options": [
        "rbind",
        "rshared",
        "rw"
      ],
      "name": "volumes",
      "source": "/var/lib/docker/volumes/",
      "type": "bind"
    }
  ],
  "propagatedmount": "/var/lib/docker/plugins/pluginHash/propagated-mount/"
}
